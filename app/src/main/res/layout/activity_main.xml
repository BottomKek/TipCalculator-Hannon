<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundTip"
    android:padding="25dp"
    android:columnCount= "2"
    android:rowCount="9"

    tools:context=".MainActivity">


    <TextView
        android:id="@+id/billTextView"
        android:layout_width="180dp"
        android:layout_height="67dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="left"
        android:text="Bill:"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp"
        tools:text="Bill:" />

    <TextView
        android:id="@+id/tipTextView"
        android:layout_width="175dp"
        android:layout_height="67dp"
        android:layout_row="2"
        android:layout_column="0"
        android:text=" Tip: "
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/billEditText"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:ems="10"
        android:hint="Bill amount"
        android:inputType="number"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:ems="10"
        android:hint="Percent Tip"
        android:inputType="number"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/qualityTextView"
        android:layout_width="172dp"
        android:layout_height="67dp"
        android:layout_row="3"
        android:layout_column="0"
        android:text="Quality:"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp"
        tools:text="Quality:" />

    <SeekBar
        android:id="@+id/qualitySeekBar"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_row="4"
        android:layout_column="0"
        android:thumb="@drawable/heart"
        android:progressDrawable="@drawable/custon_seekbar"
        android:layout_columnSpan="2" />

    <TextView
        android:id="@+id/seekBarTextView"
        android:layout_width="182dp"
        android:layout_height="67dp"
        android:layout_row="3"
        android:layout_column="1"
        android:text="Quality: "
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp" />

    <Button
        android:id="@+id/tipButton"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:text="Calculate Tip"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/totalTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:text="Final Costs: "
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/finalCostTextView"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="0"
        android:text="Total Bill: "
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/totalTipTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="1"
        android:text="Total Tip: "
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />

</GridLayout>
